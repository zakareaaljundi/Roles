@model Roles.Models.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Edit Role</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="RolesList" asp-controller="Account" class="btn btn-danger">Cancel</a>

            </div>
        </form>
    </div>
</div>
<br />
<div class="card">
    <div class="card-header">
        Users in this Role
    </div>
    <div class="card-body">
        @if (Model.Users!.Any())     // => Any() Means: does "Model.Users" have any value or not, the same of ( == null )
        {
            @foreach (var user in Model.Users!)
            {
                @user <br />
            }
        }
        else
        {
            <span class="alart alert-warning">No Users in this role</span>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ModifyUsersInRole" asp-controller="Account" asp-route-id="@Model.RoleId" class="btn btn-primary">
            Add/Remove users to/from this role
        </a>
    </div>
</div>
